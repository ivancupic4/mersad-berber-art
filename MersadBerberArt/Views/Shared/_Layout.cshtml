<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mersad Berber Art</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MersadBerberArt.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mersad Berber Art</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Art" asp-action="Index">Manage Art</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="CookiePolicy">Cookie Policy</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Mersad Berber Art@* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>

    <div class="alert alert-dismissible alert-light fixed-bottom" style="margin-bottom: 0px; display: @( (ViewBag.ShowCookiePreferenceNotice ?? false) ? "true" : "none" ) ">
        <p>
            This website uses cookies that are necessary for a website to function properly, but do not collect any personal information. No data is being sold to third party or used for any other purpose other than stated. 
            For more information please visit our <a asp-controller="Home" asp-action="CookiePolicy">Cookie Policy</a>. <br />
        </p>
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-sm btn-info align-items-md-end" data-bs-dismiss="alert" onclick="acceptCookies()" style="margin-right: 5px !important;">Accept Cookies</button>
            <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="alert" onclick="rejectCookies()">Reject Cookies</button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function acceptCookies() {
            const requestOptions = {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: null
            };

            fetch("/Home/AcceptCookies", requestOptions)
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
        function rejectCookies() {
            const requestOptions = {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: null
            };

            fetch("/Home/RejectCookies", requestOptions)
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    </script>
</body>
</html>
