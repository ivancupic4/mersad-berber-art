@model IEnumerable<MersadBerberArt.Models.ArtViewModel>

@{
    ViewData["Title"] = "Shop";
}

<h1>Browse Arts</h1>

<nav>
    @using (Html.BeginForm("Index", "Shop", FormMethod.Get))
    {
        <div class="col-sm-2 d-inline-block">
            <label class="form-label mt-4">Art Type: </label>
            @Html.DropDownList("ArtType", (IEnumerable<SelectListItem>)ViewBag.ArtTypes,"", new { @class = "form-control input-sm" })
        </div>
        <div class="col-sm-2 d-inline-block" style="margin-left: 10px">
            <label class="form-label mt-4">Name: </label>
            @Html.TextBox("SearchString", null, new { @class = "form-control input-sm" })
        </div>
        <p></p>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Search</button>
            @Html.ActionLink("Clear", "Index", "Shop", null, new { @class = "btn btn-secondary btn-md" })
        </div>
    }
</nav>
<br />
<table class="table">
    @foreach (var item in Model)
    {
        <tr class="row" style="padding: 20px 0px 20px 0px;">
            <td class="col-md-4">
                <img src="~/images/arts/@item.ImageUrl"  class="card-img" />
            </td>
            <td class="col-md-3" style="padding-left: 25px">
                <p class="lead fw-bold">@Html.DisplayFor(modelItem => item.Name)</p>
                <p>@Html.DisplayFor(modelItem => item.ArtTypeName) | @Html.DisplayFor(modelItem => item.DateCreated)</p>
                <p class="text-success lead fw-bold"><strong>@Html.DisplayFor(modelItem => item.Price)</strong></p>
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="col-md-2">
                @Html.ActionLink("Add to cart", "Cart", new { id = item.Id }, new { @class = "btn btn-info btn-md" })
                <div style="margin-top: 5px;">@Html.ActionLink("View Details", "Details", "Art", new { id = item.Id }, new { @class = "btn btn-secondary btn-md" })</div>
            </td>
        </tr>
    }
</table>

